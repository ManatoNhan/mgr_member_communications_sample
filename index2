    <script>
        const chartConfig = {
            type: 'radar',
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    r: {
                        beginAtZero: true,
                        max: 5,
                        min: 0,
                        ticks: {
                            stepSize: 1,
                            display: false
                        },
                        grid: {
                            color: '#e1e8ed'
                        },
                        angleLines: {
                            color: '#e1e8ed'
                        },
                        pointLabels: {
                            font: {
                                size: 9
                            },
                            color: '#2c3e50'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        };

        const labels = ['関与度', '柔軟性', '情報志向', '決定スタイル', 'コミュ頻度', '革新性', '専門性重視', '外部志向'];
        
        const colors = [
            'rgba(52, 152, 219, 1)',   // 青
            'rgba(46, 204, 113, 1)',   // 緑
            'rgba(231, 76, 60, 1)',    // 赤
            'rgba(155, 89, 182, 1)',   // 紫
            'rgba(243, 156, 18, 1)',   // オレンジ
            'rgba(52, 73, 94, 1)',     // ダークグレー
            'rgba(26, 188, 156, 1)',   // ターコイズ
            'rgba(230, 126, 34, 1)',   // カロット
            'rgba(149, 165, 166, 1)',  // グレー
            'rgba(142, 68, 173, 1)',   // 濃い紫
            'rgba(39, 174, 96, 1)',    // エメラルド
            'rgba(192, 57, 43, 1)',    // 濃い赤
            'rgba(22, 160, 133, 1)',   // ダークターコイズ
            'rgba(211, 84, 0, 1)',     // ダークオレンジ
            'rgba(125, 60, 152, 1)',   // ダーク紫
            'rgba(191, 191, 191, 1)'   // ライトグレー
        ];

        const datasets = [
            // 関与度, 柔軟性, 情報志向, 決定スタイル, コミュ頻度, 革新性, 専門性重視, 外部志向
            [4, 3, 4, 2, 4, 2, 4, 2], // ハンズオン指導型
            [3, 4, 2, 4, 3, 4, 2, 2], // 委任成長型
            [2, 2, 2, 1, 2, 3, 4, 2], // データ重視型
            [4, 4, 4, 3, 4, 3, 2, 2], // チーム協調型
            [2, 3, 2, 1, 2, 4, 4, 2], // 効率最適化型
            [4, 2, 4, 1, 3, 1, 2, 1], // 安定運営型
            [2, 4, 2, 2, 3, 4, 3, 3], // 危機対応型
            [4, 4, 3, 3, 4, 2, 2, 1], // 保護支援型
            [4, 1, 4, 1, 3, 1, 3, 1], // 権威統制型
            [4, 2, 5, 1, 3, 2, 5, 1], // 技術専門特化型
            [3, 4, 3, 3, 4, 4, 4, 5], // 顧客第一主義型
            [2, 4, 2, 4, 3, 5, 3, 4], // カリスマビジョナリー型
            [3, 2.5, 3, 1.5, 3, 2.5, 4, 2], // 戦略プレイヤー型
            [3.5, 4, 3, 3.5, 3.5, 3.5, 2, 2], // 成長促進型
            [2, 3.5, 2, 1.5, 2.5, 4, 3.5, 2.5], // 変革推進型
            [4, 3, 3.5, 2, 3.5, 1.5, 2, 1] // バランス統合型
        ];

        // チャートを生成
        for (let i = 0; i < 16; i++) {
            new Chart(document.getElementById(`chart${i + 1}`), {
                ...chartConfig,
                data: {
                    labels: labels,
                    datasets: [{
                        data: datasets[i],
                        backgroundColor: colors[i].replace('1)', '0.2)'),
                        borderColor: colors[i],
                        borderWidth: 2
                    }]
                }
            });
        }
    </script>
